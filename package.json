{
	"name": "taraskevizer",
	"version": "6.0.6",
	"author": "GooseOb",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/GooseOb/taraskevizer.git"
	},
	"main": "dist/index.js",
	"module": "dist/index.js",
	"devDependencies": {
		"@digitak/esrun": "^3.2.26",
		"@types/diff": "^5.2.0",
		"@types/node": "^20.12.7",
		"bun-types": "^1.1.4",
		"husky": "^9.0.11",
		"prettier": "^3.2.5",
		"tsup": "^8.0.2",
		"typescript": "^5.4.5"
	},
	"bin": {
		"tarask": "dist/bin.js"
	},
	"description": "Канвэртацыя акадэмічнага правапісу ў клясычны",
	"files": [
		"dist/index.js",
		"dist/index.cjs",
		"dist/index.d.ts",
		"dist/bin.js",
		"README.md"
	],
	"homepage": "https://gooseob.github.io/taraskevizatar/",
	"keywords": [
		"taraskevizatar",
		"taraskevica",
		"тарашкевіца",
		"тарашкевізатар",
		"belarusian"
	],
	"license": "MIT",
	"private": false,
	"scripts": {
		"build": "tsup --config build-config/index.ts",
		"build:bun_EXPERIMENTAL": "bun ./build-config/bun.ts",
		"dev": "esrun --watch=src/*,test/*,bin/* --send-code-mode=temporaryFile test",
		"dev:bun": "bun ./test/bun-watch.ts",
		"dev-bun": "bun test --watch",
		"test": "esrun --send-code-mode=temporaryFile test",
		"test-cli": "bun run build && esrun --send-code-mode=temporaryFile test",
		"prepare": "husky",
		"typecheck": "tsc --project src/tsconfig.json"
	},
	"type": "module",
	"types": "dist/index.d.ts"
}
