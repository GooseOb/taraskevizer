{
	"name": "taraskevizer",
	"version": "9.1.12",
	"author": "GooseOb",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/GooseOb/taraskevizer.git"
	},
	"main": "dist/index.js",
	"module": "dist/index.js",
	"devDependencies": {
		"@digitak/esrun": "^3.2.26",
		"@types/node": "^20.16.1",
		"bun-types": "^1.1.26",
		"husky": "^9.1.5",
		"prettier": "^3.3.3",
		"typedoc": "^0.25.13",
		"typescript": "^5.5.4"
	},
	"bin": {
